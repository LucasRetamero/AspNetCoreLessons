@model IEnumerable<Dominio.Entity.Product>

@{
    ViewData["Title"] = "Product Page";
}

<div class="text-center">
    <h1 class="display-4">Product Page</h1>
    <A href="/Product/Save"><button class="btn btn-success">Add new product</button></a>
</div>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

    @foreach (var item in Model)
    {
    <tr>
      <th scope="row">@item.id</th>
      <td>@item.name</td>
      <td>@item.category.name</td>
      <td>
       <table>
        <tr>
         <td><a href="/Product/Edit/@item.id"><button class="btn btn-warning">Edit</button></a>
            <a href="/Product/Remove/@item.id"><button class="btn btn-danger">Remove</button></a></td>
        </tr>
       </table>
       </td>
    </tr>  
    }
    
  </tbody>
</table>